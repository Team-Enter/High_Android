<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="30dp"
    tools:context=".school.InfoDepartFragment"
    android:background="@color/white">

    <TextView
        android:id="@+id/text_depart_major"
        style="@style/text_summary_title"
        android:text="@string/depart_major"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TableLayout
        android:id="@+id/lay_depart_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_depart_major">
        <TableRow
            android:id="@+id/table_row_title"
            android:weightSum="9"
            android:background="#0075FF">
            <TextView
                android:id="@+id/text_table_depart_name"
                style="@style/text_depart_table_title"
                android:text="@string/depart_depart_name"/>
            <TextView
                android:id="@+id/text_table_class"
                style="@style/text_depart_table_title"
                android:text="@string/depart_class"/>
            <TextView
                android:id="@+id/text_table_student"
                style="@style/text_depart_table_title"
                android:text="@string/depart_student"/>
        </TableRow>

        <TableRow
            android:weightSum="9"
            android:background="#D9D9D9">
            <TextView
                style="@style/text_depart_table_content"
                android:text="SW개발과"/>
            <TextView
                style="@style/text_depart_table_content"
                android:text="2"/>
            <TextView
                style="@style/text_depart_table_content"
                android:text="32"/>
        </TableRow>
        <TableRow
            android:weightSum="9"
            android:background="#D9D9D9">
            <TextView
                style="@style/text_depart_table_content"
                android:text="임베디드SW개발과"/>
            <TextView
                style="@style/text_depart_table_content"
                android:text="1"/>
            <TextView
                style="@style/text_depart_table_content"
                android:text="16"/>
        </TableRow>
        <TableRow
            android:weightSum="9"
            android:background="#D9D9D9">
            <TextView
                style="@style/text_depart_table_content"
                android:text="인공지능SW개발과"/>
            <TextView
                style="@style/text_depart_table_content"
                android:text="1"/>
            <TextView
                style="@style/text_depart_table_content"
                android:text="16"/>
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>