<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".start.StartChoiceFragment"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img_start_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_marginTop="-100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_start_signup"
        style="@style/btn"
        android:layout_marginBottom="130dp"
        android:text="@string/start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        app:layout_constraintStart_toStartOf="@id/btn_start_signup"
        app:layout_constraintEnd_toEndOf="@id/btn_start_signup"
        app:layout_constraintTop_toBottomOf="@id/btn_start_signup">

        <TextView
            android:id="@+id/text_start_question"
            style="@style/text_choice"
            android:text="@string/start_question"
            android:fontFamily="@font/inter_regular"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/text_start_login"
            style="@style/text_choice"
            android:text="@string/start_login"
            android:fontFamily="@font/inter_bold"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>