<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="layout_constraintWidth_percent">0.87</item>
        <item name="android:background">@drawable/btn_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">40dp</item>
    </style>
    <style name="text_choice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="img_start_logo">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:src">@drawable/text_logo</item>
    </style>
    <style name="text_start_intro">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/start_intro_background</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="text_start_edit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>
    <style name="lay_start_edit">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintWidth_percent">0.86</item>
        <item name="hintEnabled">false</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>
    <style name="edit_start">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:background">@drawable/start_edit_background</item>
        <item name="hintTextColor">#6B6B6B</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="text_home_intro">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">-3dp</item>
    </style>
    <style name="btn_my">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">4.9</item>
        <item name="android:background">@drawable/my_page_background</item>
        <item name="android:backgroundTint">#E8F4FF</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@color/text_blue</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="btn_inspection">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/blue</item>
    </style>
    <style name="text_inspection_item_answer">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/inspection_answer_background</item>
        <item name="android:backgroundTint">#EFEFEF</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginEnd">13dp</item>
    </style>
    <style name="text_inspection_item_answer_tip">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#C2C2C2</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
</resources>